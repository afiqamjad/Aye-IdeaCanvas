    <fragment
        android:id="@+id/search"
        android:name="com.bignerdranch.android.aye_ideacanvas.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
    </fragment>

    <fragment
        android:id="@+id/profile"
        android:name="com.bignerdranch.android.aye_ideacanvas.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/notifications"
        android:name="com.bignerdranch.android.aye_ideacanvas.notifications.NotificationsFragment"
        android:label="fragment_notifications"
