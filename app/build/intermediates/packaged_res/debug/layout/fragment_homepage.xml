<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomepageFragment">

    <ImageView
        android:id="@+id/storyboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/backgrounds/scenic[5]"
        android:contentDescription="@string/storyboard_image" />

    <androidx.cardview.widget.CardView
        android:id="@+id/pfpCard"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/pfpPic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars"
            android:contentDescription="@string/profile_picture" />
    </androidx.cardview.widget.CardView>

    <android.widget.Button
        android:id="@+id/likeButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/icon_park_solid_like_default"
        android:elevation="20dp"
        android:stateListAnimator="@null"
        app:layout_constraintEnd_toStartOf="@+id/commentButton"
        app:layout_constraintTop_toTopOf="@+id/storyboard" />

    <android.widget.Button
        android:id="@+id/commentButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="20dp"
        android:stateListAnimator="@null"
        android:elevation="20dp"
        android:background="@drawable/material_symbols_comment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/storyboard" />
</androidx.constraintlayout.widget.ConstraintLayout>