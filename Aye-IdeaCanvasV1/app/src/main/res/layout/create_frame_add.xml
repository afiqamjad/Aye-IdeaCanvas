<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/frame"
        android:layout_width="59dp"
        android:layout_height="96dp"
        android:background="@drawable/rounded_corner_add"
        android:contentDescription="@string/frame"
        android:src="@drawable/ic_baseline_add_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/newFrameTemplate"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:background="@drawable/speech_bubble_background"
        android:elevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/frame">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/new_frames_templates"
            android:textColor="@color/gray"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/divider1"
            android:layout_width="0dp"
            android:layout_height="0.75dp"
            android:background="@color/gray"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@id/titleTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/standardButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/standard"
            android:textColor="@color/dark_gray"
            android:backgroundTint="@color/transparent"
            android:gravity="start"
            app:layout_constraintTop_toBottomOf="@id/divider1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="0.75dp"
            android:background="@color/gray"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@id/standardButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/characterSheetButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/character_sheet"
            android:textColor="@color/dark_gray"
            android:gravity="start"
            android:backgroundTint="@color/transparent"
            app:layout_constraintTop_toBottomOf="@id/divider2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/divider3"
            android:layout_width="0dp"
            android:layout_height="0.75dp"
            android:background="@color/gray"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@id/characterSheetButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/emptyFrameButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/empty_frame"
            android:textColor="@color/dark_gray"
            android:gravity="start"
            android:backgroundTint="@color/transparent"
            app:layout_constraintTop_toBottomOf="@id/divider3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/divider4"
            android:layout_width="0dp"
            android:layout_height="0.75dp"
            android:background="@color/gray"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@id/emptyFrameButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/otherButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/other"
            android:textColor="@color/dark_gray"
            android:gravity="start"
            android:backgroundTint="@color/transparent"
            app:layout_constraintTop_toBottomOf="@id/divider4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>